<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OrderActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/second"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227">
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/burger"
                android:textColor="#8F2B24"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#756006"
                android:text="@string/HargaBurger"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etqburger"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/Qtt"
                android:textColor="#756006"
                android:inputType="number"
                android:autofillHints="@string/Qtt" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/burger"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Fries"
                android:textColor="#8F2B24"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HargaFries"
                android:textColor="#756006"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etqfries"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/Qtt"
                android:inputType="number"
                android:autofillHints="@string/Qtt" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fries"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chikenWing"
                android:textColor="#8F2B24"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#756006"
                android:text="@string/HargaCwing"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/etqchicken"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/Qtt"
                android:inputType="number"
                android:autofillHints="@string/Qtt" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cwing"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.70">
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HotDog"
                android:textColor="#8F2B24"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#756006"
                android:text="@string/HargaHotDog"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/etqhotdog"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/Qtt"
                android:inputType="number"
                android:autofillHints="@string/Qtt" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hotdog"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86
">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coke"
                android:textColor="#8F2B24"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#756006"
                android:text="@string/HargaCoke"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/etqdrinks"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="@string/Qtt"
                android:inputType="number"
                android:autofillHints="@string/Qtt" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/drinks"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HeaderOrder"
        android:textColor="#F8F0F0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />
    <Button
        android:id="@+id/btnorder2"
        android:layout_width="146dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/maroon"
        android:text="@string/order"
        android:textSize="18sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

</androidx.constraintlayout.widget.ConstraintLayout>